/* pages/lock/lock.wxss */
.devicesItem {
  padding: 30rpx;
  border-bottom: 1rpx solid #F5F5F5;
  background-color: #fff;
}
.devicesItem:last-child {
  border-bottom: 0;
}
.icon {
  width: 94rpx;
  height: 94rpx;
  background-image: url('data:image/png;base64,');
  background-repeat: no-repeat;
  background-size: contain;
}

.content {
  padding-left: 30rpx;
  flex: 2;
}
.name {
  margin-bottom: 10rpx;
  font-size: 16px;
  color: #333333;
}
.id {
  font-size: 12px;
  color: #8C8C8C;
}

.btn {
  flex: 1;
  text-align: center;
  height: 100rpx;
  line-height: 100rpx;
  color: #fff;
}

.btn:nth-child(1) {
  background-color: #5CB85C;
}
.btn:nth-child(2) {
  background-color: #F0AD4E;
}
.btn:nth-child(3) {
  background-color: #5BC0DE;
}
.btn:nth-child(4) {
  background-color: #D9534F;
}
.title {
  margin-bottom: 20rpx;
}
.p {
  font-size: 12px;
  color: #8C8C8C;
}